
    <h1>My Entries</h1>

    <% if @entries.any? %>
      <table>
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @entries.each do |entry| %>
            <tr>
              <td><%= entry.first_name %></td>
              <td><%= entry.last_name %></td>
              <td><%= entry.email%></td>
              <td><%= link_to "Edit", edit_entry_path(entry) %> <%= link_to "Delete", delete_entry_path(entry), method: :delete, data: { confirm: "Are you sure?" } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>No entries found.</p>
    <% end %>

  <%= link_to "New Entry", new_entry_path %>
